# Database
DATABASE_URL=sqlite:///data/profiles.db

# Audio Settings
AUDIO_SAMPLE_RATE=16000
AUDIO_CHUNK_DURATION=5.0
PULSEAUDIO_DEVICE=auto

# Whisper Settings
WHISPER_MODEL_SIZE=base
WHISPER_DEVICE=cpu
WHISPER_LANGUAGE=en

# Speaker Identification
SPEAKER_SIMILARITY_THRESHOLD=0.75
AUTO_REGISTER_SPEAKERS=true

# Profiling
MIN_WORDS_FOR_PROFILE=100
CONFIDENCE_THRESHOLDS=100,500,1500

# Web UI
FLASK_SECRET_KEY=change-this-to-a-secure-key
FLASK_PORT=5000
FLASK_DEBUG=false

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/profiler.log

# HuggingFace Token (required for pyannote.audio)
HF_TOKEN=your-huggingface-token-here
